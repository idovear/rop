<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:rop="http://www.rop.com/schema/rop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.rop.com/schema/rop http://www.rop.com/schema/rop/rop-1.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!--扫描Spring Bean-->
    <context:component-scan base-package="com.yunhou.openapi"/>

    <!-- 启动Rop框架 -->
    <rop:annotation-driven
        id="router"
        session-manager="sampleSessionManager"
        app-secret-manager="appSecretManager"
        service-access-controller="serviceAccessController"
        formatting-conversion-service="conversionService"
        ext-error-base-names="i18n/rop/sampleRopError,i18n/rop/sampleRopError1"
        service-timeout-seconds="10"
        invoke-times-controller="invokeTimesController"
        upload-file-max-size="10"
        upload-file-types="png,gif"
        core-pool-size="200"
        max-pool-size="500"
        queue-capacity="50"
        keep-alive-seconds="300"
        sign-enable="false"/>

    <bean id="sampleSessionManager" class="com.yunhou.openapi.security.YunhouSessionManager" />
    <bean id="invokeTimesController" class="com.yunhou.openapi.security.YunhouInvokeTimesController"/>
    <bean id="appSecretManager" class="com.yunhou.openapi.security.YunhouAppSecretManager"/>
    <bean id="serviceAccessController" class="com.yunhou.openapi.security.YunhouServiceAccessController"/>

    <!--设置自定义的类型转换服务，注册自定义的类型转换器-->
    <bean id="conversionService"
          class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <!--将xxxx-yyyyyyy格式的电话转换为内部的Telephone对象-->
                <bean class="com.yunhou.openapi.converter.TelephoneConverter"/>
                <bean class="com.yunhou.openapi.converter.DateConverter"/>
            </set>
        </property>
    </bean>

    <!--注册拦截器，可配置多个-->
    <rop:interceptors>
        <bean class="com.yunhou.openapi.interceptors.ReservedInterceptor"/>
    </rop:interceptors>

    <!--注册监听器，可配置多具-->
    <rop:listeners>
        <bean class="com.yunhou.openapi.listeners.SamplePostInitializeEventListener"/>
        <bean class="com.yunhou.openapi.listeners.SamplePreDoServiceEventListener"/>
        <bean class="com.yunhou.openapi.listeners.SampleAfterDoServiceEventListener"/>
    </rop:listeners>

    <!--自定义method,appKey等这些系统级参数的参数名-->
    <rop:sysparams
            format-param-name="messageFormat"
            jsonp-param-name="__invoke"/>

</beans>